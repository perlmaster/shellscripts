function what
{
	typeset tempfile
	typeset name

	if [[ $# < 1 ]]
	then
		echo "Usage : ${FUNCNAME[0]} name"
	else
		tempfile=/tmp/${LOGNAME}.$$.what
		name="$1"

		alias "$name" 2> /dev/null

		/bin/rm -f $tempfile
		which "$name" 2> /dev/null > $tempfile
		if [[ $? == 0 ]]
		then
			/bin/ls -l `cat $tempfile`
		fi

		/bin/rm -f $tempfile
		type "$name" > $tempfile 2> /dev/null
		if [[ $? == 0 ]]
		then
			cat $tempfile
		fi
	fi
	/bin/rm -f $tempfile
}
